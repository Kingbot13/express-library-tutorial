<!DOCTYPE html>
<html lang="en">
<%- include('./head'); %>
<body>
    <%- include('./layout'); %>
    <h1>Genre: <%= genre.name %></h1>
    <div>
        <h4>Books</h4>
        <dl>
            <% genre_books.forEach(book => {%>
                <dt>
                    <a href="<%= book.url%>"><%= book.title %></a>
                </dt>
                <dd><%= book.summary%></dd>

            <%}) %>
        </dl>
    </div>
</body>
</html>