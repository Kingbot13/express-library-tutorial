<!DOCTYPE html>
<html lang="en">
<%- include('./head'); %>
<body>
    <%- include('./layout'); %>
    <h1>Title: <%= book.title%></h1>
    <p>
        <strong>Author: </strong>
        <a href="<%= book.author.url %>"><%= book.author.name%></a>
    </p>
    <p>
        <strong>Summary: </strong>
        <%= book.summary%>
    </p>
    <p>
        <strong>ISBN: </strong>
        <%= book.isbn %>

    </p>
    <p>
        <strong>Genre: </strong>
        <% book.genre.forEach(val => {%>
            <a href="<%= val.url%>"><%= val.name%></a>
        <%})%>
    </p>
    <div>
        <h4>Copies</h4>
        <% book_instances.forEach(val => {%>
            <hr>
            <% if (val.status === 'Available'){ %>
                <p class="text-success"><%= val.status %></p>
            <% } else if (val.status === 'Maintenance'){%>
        
                <p class="text-danger"><%= val.status %></p>
            <% } else {%>
            
                <p class="text-warning"><%= val.status %></p>
            <% }%>
            <% if (val.status !== 'Available'){ %>
                <p><strong>Due back: </strong><%= val.due_back %></p>
            <% }%>
            <p>
                <strong>ID: </strong>
                <a href="<%= val.url %>"><%= val.id%></a>
            </p>
        <%});%>
    </div>

</body>
</html>